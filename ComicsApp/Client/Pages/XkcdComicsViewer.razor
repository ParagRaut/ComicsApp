@page "/xkcdcomicsviewer"
@inject HttpClient Http

<h5>Click to see XKCD comic strip</h5>

<br />

<div>
    <RadzenButton Click="@GetXkcdComic" Text="Get Comic Strip"/>
</div>

<br />

<RadzenCard Style="padding: 5px;">
    <picture>
        <img src="@_fileResult" class="img-fluid" alt="Comic Loading...">
    </picture>
</RadzenCard>


@code {

    private string _fileResult = "images/xkcd.jpg";

    protected async Task GetXkcdComic()
    {
        _fileResult = await Http.GetStringAsync("Comics/xkcd");
    }
}
